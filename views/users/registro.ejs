<!DOCTYPE html>
<html lang="en">
    <%-include('../partials/head')%>

<body> 
    <%-include('../partials/header')%>
    <main class="mainlogin2" >
        <div class="mainlogin">
        <div>
            <h4>¡Hola! Creá tu cuenta</h4>
        </div>
        <form action="/usuarios/registrado" method="POST" enctype="multipart/form-data">
            <input type="text" name="nombre" placeholder="Nombre" value="<%= locals.old ? old.nombre: null %>"><br><br><br>
            <% if (locals.errors && errors.nombre) { %>
                <div>
                    <%= errors.nombre.msg %> 
                </div>
            <% } %>
            <input type="text" name="apellido" placeholder="Apellido" value="<%= locals.old ? old.apellido : null %>"><br><br><br>
            <% if (locals.errors && errors.apellido) { %>
                <div>
                    <%= errors.apellido.msg %> 
                </div>
            <% } %>
            <input type="email" id="email" name="email" placeholder="Email" value="<%= locals.old ? old.email : null %>"><br><br><br>
            <% if (locals.errors && errors.email) { %>
                <div>
                    <%= errors.email.msg %> 
                </div>
            <% } %>
            <input type="text" name="usuario" placeholder="Nombre de usuari@" value="<%= locals.old ? old.usuario : null %>"><br><br><br>
            <% if (locals.errors && errors.usuario) { %>
                <div>
                    <%= errors.usuario.msg %> 
                </div>
            <% } %>
            <input type="password" name="password" placeholder="Contraseña">
            <span class="eyeboton" ><i class="far fa-eye-slash"></i></span> <br><br><br>
            <% if (locals.errors && errors.password) { %>
                <div>
                    <%= errors.password.msg %> 
                </div>
            <% } %>
            <input type="password" placeholder="Confirmar contraseña">
            <span class="eyeboton" ><i class="far fa-eye-slash"></i></span> <br><br><br>
            <% if (locals.errors && errors.password) { %>
                <div>
                    <%= errors.password.msg %> 
                </div>
            <% } %>
            <input type="tel" name="telefono" placeholder="Nro. Teléfono" value="<%= locals.old ? old.telefono : null %>"><br><br><br>
            <% if (locals.errors && errors.telefono) { %>
                <div>
                    <%= errors.telefono.msg %> 
                </div>
            <% } %>
            <input type="text" name="direction" placeholder="Dirección" value="<%= locals.old ? old.direction : null %>"><br><br>
            <% if (locals.errors && errors.direction) { %>
                <div>
                    <%= errors.direction.msg %> 
                </div>
            <% } %>
            <div class="subirImagen">
                <label>Subir Imágen:</label>
                <br>
                <input type="file" name="imagenUsuario" id="file" class="inputfile"/>
                <label for="file">Seleccionar Imágen</label>
            </div><br>
            <% if (locals.errors && errors.imagenUsuario) { %>
                <div>
                     <%= errors.imagenUsuario.msg %> 
                 </div>
             <% } %>
            <input type="text" name="notas" placeholder="Notas" value="<%= locals.old ? old.notas : null %>"><br><br><br>
            <% if (locals.errors && errors.notas) { %>
                <div>
                     <%= errors.notas.msg %> 
                 </div>
             <% } %>
            <input id="botonlogin" class="submit-form" type="submit" value="Registrarse"><br><br>
            <h6>Dando click en Registrarse,aceptas nuestros <a href="#">Términos y condiciones</a></h6><br><br>
        </form>
        </div>
    </main>


    <%-include('../partials/footer')%>
</body>
</html>